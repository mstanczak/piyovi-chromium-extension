{
  "manifest_version": 3,
  "name": "Piyovi Row Highlighter",
  "version": "1.0",
  "description": "Highlights specific rows on piyovi.io based on cell content.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.piyovi.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.piyovi.io/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Piyovi Row Highlighter"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
